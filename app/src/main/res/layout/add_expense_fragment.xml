                                android:text="500000" />

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_dateTime_AddExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_schedule"
                    android:drawablePadding="10dp"
                    android:text="@string/demoDate"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/horizontalScrollView3_AddExpense"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_AddExpense" />

                <TextView
                    android:id="@+id/tv_changeDate_AddExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/ChangeDate"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView3_AddExpense"
                    app:layout_constraintTop_toTopOf="@+id/tv_dateTime_AddExpense" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_save_AddExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/pink"
                    android:clickable="true"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_changeDate_AddExpense"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_AddExpense">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="50dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="50dp"
                        android:paddingBottom="5dp"
                        android:text="@string/Save"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_back_AddExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    android:clickable="true"
                    android:visibility="gone"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="16dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_dateTime_AddExpense"
                    app:layout_constraintTop_toTopOf="@+id/cv_save_AddExpense">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="50dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="50dp"
                        android:paddingBottom="5dp"
                        android:text="@string/Back"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_calculator_AddExpense"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/gray"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="invisible"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeColor="@color/red"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/calculator_round" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/nativeAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:gnt_template_type="@layout/gnt_small_template_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




