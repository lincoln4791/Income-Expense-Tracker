            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_dateTime_AddIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_schedule"
                android:drawablePadding="10dp"
                android:text="@string/demoDate"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/horizontalScrollView3_AddIncome"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3_AddIncome" />

            <TextView
                android:id="@+id/tc_changeDate_AddIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
