                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView3_AddIncome"
                app:layout_constraintTop_toTopOf="@+id/tv_dateTime_AddIncome" />

